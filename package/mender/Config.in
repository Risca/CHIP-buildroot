config BR2_PACKAGE_MENDER
	bool "mender"
	depends on BR2_PACKAGE_HOST_GO_ARCH_SUPPORTS
	depends on BR2_PACKAGE_HOST_GO_CGO_LINKING_SUPPORTS
	depends on BR2_TOOLCHAIN_HAS_THREADS
	help
	  Mender is an open source tool for updating your
	  embedded devices safely and reliably

	  https://github.com/mendersoftware

if BR2_PACKAGE_MENDER

config BR2_PACKAGE_MENDER_CONFIG
	string "configuration file"
	help
	  Much of the Mender client's configuration resides in
	  /etc/mender/mender.conf on the root filesystem. This file is JSON
	  structured and defines various parameters for Mender's operation.

config BR2_PACKAGE_MENDER_PERSISTENT_DATA
	bool "create symlink to data partition"
	help
	  Symlink /var/lib/mender to /data/mender to allow persistent data
	  across updates.

config BR2_PACKAGE_MENDER_SERVER_CERT
	string "server certificates file"
	help
	  The server certificates file is a concatenation of all certificates
	  that the Mender client use. It is used for server verification when
	  using HTTPS.

config BR2_PACKAGE_MENDER_ARTIFACT_VERIFY_KEY
	string "artifact verification key"
	help
	  The artifact verification key is used by the mender client to verify
	  artifacts. Leave empty to disable.

endif

comment "mender needs a toolchain w/ threads"
	depends on BR2_PACKAGE_HOST_GO_ARCH_SUPPORTS && \
		BR2_PACKAGE_HOST_GO_CGO_LINKING_SUPPORTS
	depends on !BR2_TOOLCHAIN_HAS_THREADS
